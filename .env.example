# Database (Docker Compose service name: postgres)
HUNTER_DATABASE_URL=postgresql://dyn365hunter:password123@postgres:5432/dyn365hunter
POSTGRES_USER=dyn365hunter
POSTGRES_PASSWORD=password123
POSTGRES_DB=dyn365hunter

# Redis
HUNTER_REDIS_URL=redis://redis:6379/0

# FastAPI
HUNTER_API_HOST=0.0.0.0
HUNTER_API_PORT=8000
HUNTER_LOG_LEVEL=INFO

# Development
HUNTER_ENVIRONMENT=development

# Microsoft SSO (G19) - Optional, required for authentication
# HUNTER_AZURE_CLIENT_ID=your-client-id
# HUNTER_AZURE_CLIENT_SECRET=your-client-secret
# HUNTER_AZURE_TENANT_ID=your-tenant-id
# HUNTER_AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# JWT (G19) - Change in production
# HUNTER_JWT_SECRET_KEY=your-secret-key-change-in-production
# HUNTER_JWT_ALGORITHM=HS256
# HUNTER_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
# HUNTER_JWT_REFRESH_TOKEN_EXPIRE_DAYS=90

# Refresh Token Encryption (G19 - Security hardening)
# Generate key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# HUNTER_REFRESH_TOKEN_ENCRYPTION_KEY=your-base64-encoded-fernet-key
